@page
@model GitGodsLMS.Pages.Assignment_Management.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Assignment.Id" />
            <div class="form-group">
                <input type="hidden" asp-for="Assignment.ClassId" />
                <span class="text-danger">*</span>
                <label asp-for="Assignment.Title" class="control-label"></label>
                <input asp-for="Assignment.Title" class="form-control" />
                <span asp-validation-for="Assignment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Assignment.Description" class="control-label"></label>
                <input asp-for="Assignment.Description" class="form-control" />
                <span asp-validation-for="Assignment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Assignment.DueDateTime" class="control-label"></label>
                <input asp-for="Assignment.DueDateTime" class="form-control" />
                <span asp-validation-for="Assignment.DueDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Assignment.SubmissionType" class="control-label"></label>
                <div>
                    @foreach (var submissionType in Enum.GetValues(typeof(GitGodsLMS.Pages.Model.SubmissionType)))
                    {
                        <div class="form-check form-check-inline">
                            <input type="radio" asp-for="Assignment.SubmissionType" class="form-check-input"
                                   value="@submissionType" id="submissionType_@submissionType" />
                            <label class="form-check-label" for="submissionType_@submissionType">@submissionType</label>
                        </div>
                    }
                </div>
                <span asp-validation-for="Assignment.SubmissionType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Assignment.MaxPoints" class="control-label"></label>
                <input asp-for="Assignment.MaxPoints" class="form-control" />
                <span asp-validation-for="Assignment.MaxPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Classes">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
